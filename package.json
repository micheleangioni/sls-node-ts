{
  "name": "sls-node-ts",
  "version": "0.5.1",
  "description": "Serverless Node.js TypeScript starter to write serverless applications by using the Serverless Framework in Node.js and TypeScript",
  "main": "handler.ts",
  "scripts": {
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\"",
    "offline": "node --max-old-space-size=4096 node_modules/serverless/bin/serverless offline start --port 3000 --stage development",
    "package": "node --max-old-space-size=4096 node_modules/serverless/bin/serverless package --stage development",
    "test": "node --max-old-space-size=4096 node_modules/jest/bin/jest --runInBand --forceExit --verbose",
    "watch-test": "node --max-old-space-size=4096 node_modules/jest/bin/jest --runInBand --verbose --watchAll",
    "deploy-local": "node --max-old-space-size=4096 node_modules/serverless/bin/serverless deploy --stage local --region us-east-1",
    "deploy-staging": "node --max-old-space-size=4096 node_modules/serverless/bin/serverless deploy --stage staging --region eu-west-1",
    "deploy-production": "node --max-old-space-size=4096 node_modules/serverless/bin/serverless deploy --stage production --region eu-west-1",
    "remove-local": "node --max-old-space-size=4096 node_modules/serverless/bin/serverless remove --stage local --region us-east-1",
    "remove-staging": "node --max-old-space-size=4096 node_modules/serverless/bin/serverless remove --stage staging --region eu-west-1",
    "remove-production": "node --max-old-space-size=4096 node_modules/serverless/bin/serverless remove --stage production --region eu-west-1"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|\\.(test))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "testEnvironment": "node"
  },
  "dependencies": {
    "@micheleangioni/node-messagebrokers": "^0.6.0",
    "@types/moment": "^2.13.0",
    "@types/moment-timezone": "^0.5.13",
    "@types/mongoose": "^5.7.28",
    "@types/validator": "^12.0.1",
    "apollo-server-lambda": "^2.14.2",
    "deepmerge": "^4.2.2",
    "graphql": "^15.1.0",
    "graphql-tools": "^6.0.11",
    "middy": "^0.36.0",
    "moment": "^2.27.0",
    "moment-timezone": "^0.5.31",
    "mongoose": "^5.9.20",
    "querystring": "^0.2.0",
    "source-map-support": "^0.5.19",
    "validator": "^12.2.0"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.57",
    "@types/jest": "^25.1.4",
    "@types/node": "^12.12.31",
    "@typescript-eslint/eslint-plugin": "^3.4.0",
    "@typescript-eslint/parser": "^3.4.0",
    "bufferutil": "^4.0.1",
    "eslint": "^7.3.1",
    "eslint-plugin-prefer-arrow": "^1.2.1",
    "jest": "^25.2.0",
    "serverless": "^1.67.0",
    "serverless-deployment-bucket": "^1.1.2",
    "serverless-localstack": "^0.4.24",
    "serverless-offline": "^6.4.0",
    "serverless-plugin-typescript": "^1.1.9",
    "ts-jest": "^25.2.1",
    "ts-loader": "^6.2.2",
    "ts-node": "^8.10.2",
    "typescript": "^3.8.3",
    "typescript-eslint": "0.0.1-alpha.0",
    "utf-8-validate": "^5.0.2"
  },
  "author": {
    "name": "Michele Angioni",
    "email": "michele.angioni@gmail.com"
  },
  "license": "MIT"
}
