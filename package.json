{
  "name": "sls-node-ts",
  "version": "0.1.0",
  "description": "Serverless Node.js TypeScript starter",
  "main": "handler.ts",
  "scripts": {
    "lint": "tslint --project .",
    "offline": "sls offline start --port 3000 --stage development",
    "test": "jest --runInBand --forceExit --verbose",
    "watch-test": "jest --runInBand --verbose --watchAll",
    "deploy-staging": "node --max-old-space-size=4096 node_modules/serverless/bin/serverless deploy --stage staging --region eu-west-1",
    "deploy-production": "node --max-old-space-size=4096 node_modules/serverless/bin/serverless deploy --stage production --region eu-west-1"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|\\.(test))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "testEnvironment": "node"
  },
  "dependencies": {
    "@types/moment": "^2.13.0",
    "@types/moment-timezone": "^0.5.12",
    "@types/mongoose": "^5.5.30",
    "@types/validator": "^10.11.3",
    "apollo-server-lambda": "^2.9.13",
    "deepmerge": "^4.2.2",
    "graphql": "^14.5.8",
    "graphql-tools": "^4.0.5",
    "middy": "^0.33.2",
    "moment": "^2.24.0",
    "moment-timezone": "^0.5.26",
    "mongoose": "^5.7.14",
    "querystring": "^0.2.0",
    "source-map-support": "^0.5.10",
    "validator": "^11.1.0"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.39",
    "@types/jest": "^24.0.18",
    "@types/node": "^13.1.6",
    "bufferutil": "^4.0.1",
    "jest": "^24.9.0",
    "serverless": "^1.60.5",
    "serverless-offline": "^5.12.1",
    "serverless-webpack": "^5.3.1",
    "ts-jest": "^24.3.0",
    "ts-loader": "^6.2.0",
    "ts-node": "^8.6.1",
    "tslint": "^5.19.0",
    "typescript": "^3.7.4",
    "utf-8-validate": "^5.0.2",
    "webpack": "^4.41.5"
  },
  "author": {
    "name": "Michele Angioni",
    "email": "michele.angioni@gmail.com"
  },
  "license": "MIT"
}
